<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRegisterId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_login_edittext"
            android:hint="아이디 입력"
            android:inputType="textVisiblePassword"

            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="10dp" />
        <android.widget.Button
            android:id="@+id/btnCheckId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_login_register_available"
            android:text="중복체크"
            android:textColor="@color/melon_signature"
            android:textSize="12sp"/>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etRegisterPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_login_edittext"
        android:hint="비밀번호(영문, 숫자, 특수문자)"
        android:inputType="textPassword"

        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="10dp" />


    <android.widget.Button
        android:id="@+id/btnAddRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/btn_login_register_inavailable"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="회원가입"
        android:textColor="@color/light_gray"
        android:textSize="16sp" />

</LinearLayout>