<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners
                android:radius="15dp"/>
            <size
                android:width="60dp"
                android:height="30dp"/>
            <solid
                android:color="#FFE3E3E3"/>
            <stroke
                android:width="2dp"
                android:color="#FFE3E3E3"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="15dp"/>
            <size
                android:width="60dp"
                android:height="30dp"/>
            <solid
                android:color="@color/switch_point"/>
            <stroke
                android:width="2dp"
                android:color="@color/switch_point"/>
        </shape>
    </item>
</selector>