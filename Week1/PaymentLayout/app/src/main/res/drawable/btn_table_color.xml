<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <size
                android:width="70dp"
                android:height="20dp"/>
            <corners
                android:radius="3dp"/>
            <stroke
                android:width="1.2dp"
                android:color="#FFD0D7DD"/>
            <solid
                android:color="#FFF7FAFF"/>
            <padding
                android:top="5dp"
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <size
                android:width="70dp"
                android:height="20dp"/>
            <corners
                android:radius="3dp"/>
            <stroke
                android:width="1.2dp"
                android:color="#FF6C798A"/>
            <solid
                android:color="#666E96D7"/>
            <padding
                android:top="5dp"
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>
</selector>