<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <size android:width="10dp" android:height="4dp"/>
            <solid android:color="#FFF7FAFF"/>
            <corners android:radius="50dp"/>
            <stroke android:width="1.2dp" android:color="#FFD0D7DD"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <size android:width="100dp" android:height="40dp"/>
            <solid android:color="#666E96D7"/>
            <corners android:radius="50dp"/>
            <stroke android:width="1.2dp" android:color="#FF6C798A"/>
        </shape>
    </item>
</selector>