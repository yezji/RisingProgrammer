<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">
    <ImageButton
        android:id="@+id/ib_chatbot"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/btn_chatbot"
        android:scaleType="centerInside"
        android:background="@color/transparency" />
    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/ib_chatbot"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_round_text"
        android:text="@string/btn_chatbot_text"
        android:textColor="@color/top_chatbot"
        android:singleLine="true"
        android:drawableRight="@drawable/ic_arrow"
        android:padding="5dp"
        android:layout_margin="5dp"
        style="?android:attr/borderlessButtonStyle"/>
</RelativeLayout>