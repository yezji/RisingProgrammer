<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <size
                android:width="200dp"
                android:height="50dp"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/light_gray"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <size
                android:width="200dp"
                android:height="50dp"/>
            <stroke
                android:width="1.5dp"
                android:color="@color/melon_darker"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
</selector>